@model Coresite.Models.ViewModel.SubCategoryAndCategoryViewModel
@using Coresite.Extentions


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create SubCategory</h2>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="border backgroundWhite">
    <form method="post" asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <select id="dllCategoryList" asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.Id)" class="form-control" ></select>
            </div>
        </div>
        <div class="form-group row">

            <div class="col-md-2">
                <label asp-for="SubCategory.Name" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="SubCategory.Name" class="form-control" />
            </div>
            <span asp-validation-for="SubCategory.Name" class="text-danger"></span>

            @*-----------------------------------------------------------*@


        </div>
        <div class="form-group row">
            <div class="col-md-5 offset-md-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>

    </form>
<br />
<div class="col-md-4">
    @if(Model.SubCategoryList.Count()>0){
    <p>Existing SubCategories: </p>
    <div id="SubCategoryList">
        <ul class="list-group">
            
        </ul>
    </div>
    }
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        function updateSubCategoryList() {
            var categorySelected = document.getElementById("dllCategoryList").value;

            $list = $('#SubCategoryList');

            $.ajax(
                {
                    url: '/Admin/SubCategory/GetSubCategory/' + categorySelected,
                    type: 'GET',
                    dataType: 'text',
                    success: function(data) {
                        results = JSON.parse(data);
                        $list.html('');
                        $list.append('<ul class="list-group">');
                        for (i in results) {
                            $list.append('<li class="list-group-item">' + results[i].text + '</li>');
                        }
                        $list.append('</ul>');

                    }
                }
            )
        }

        $(document).ready(function() {
            updateSubCategoryList();

        });

        $("#dllCategoryList").on("change",
            function() {
                updateSubCategoryList();
            });
    </script>
}
